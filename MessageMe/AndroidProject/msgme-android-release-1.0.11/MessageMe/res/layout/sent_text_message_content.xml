<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <include
        android:id="@+id/date_divider"
        layout="@layout/date_divider_layout" />

    <LinearLayout
        android:id="@+id/bubble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_divider"
        android:weightSum="1.0" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".25"
            android:visibility="invisible" />

        <!--
             Set the maximum width of the text message, while keeping the
             bubbles small for short messages.
        -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".75"
            android:gravity="right" >

            <include layout="@layout/sent_message_status_indicator" />

            <TextView               
                android:id="@+id/text_message_body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/sent_text_message_selector"
                android:minHeight="20dp"
                android:textColor="@color/text_message_text_selector"
                android:textIsSelectable="false"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/readers_label" />

</RelativeLayout>