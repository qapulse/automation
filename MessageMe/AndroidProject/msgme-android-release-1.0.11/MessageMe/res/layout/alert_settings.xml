<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/groupedtable_cell_base_single" >

    <!-- Buttons have a default margin so we have to make the 
         height slightly bigger than the 32dp image, otherwise
         it gets cropped. -->
    <Button
        android:id="@+id/settings_btn"
        android:layout_width="fill_parent"
        android:layout_height="36dp"
        android:background="@null" />

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_toRightOf="@+id/alert_image"
    	android:gravity="center_vertical" >
    	
	    <ImageView
	        android:id="@+id/alert_image"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="@null"
	        android:src="@drawable/groupedtable_cell_icon_alert" />
	    
	    <LinearLayout 
	        android:orientation="vertical"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_marginLeft="16dip">
		    
		    <TextView
		        android:id="@+id/alert_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/alerts_label"
		        android:textSize="16sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/alert_period"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/alerts_on"
		        android:textColor="@color/text_pill_color"
		        android:textSize="13sp" />
	    </LinearLayout>
	</LinearLayout>    
</RelativeLayout>