<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <include
        android:id="@+id/date_divider"
        layout="@layout/date_divider_layout" />

    <LinearLayout
        android:id="@+id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/date_divider"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <include layout="@layout/sent_message_status_indicator" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/map_message_body"
                android:layout_width="@dimen/map_content_width"
                android:layout_height="@dimen/map_content_height"
                android:contentDescription="@string/msg_bubble_sent_location"
                android:scaleType="fitXY"
                android:src="@drawable/messagesview_bubble_thumbtext_overlay_self" />

            <FrameLayout
                android:layout_width="@dimen/map_content_width"
                android:layout_height="wrap_content"
                android:layout_margin="0dip"
                android:background="@drawable/messagesview_bubble_thumbtext_base_self_selector" >

                <include layout="@layout/location_message_info" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/readers_label" />

</RelativeLayout>