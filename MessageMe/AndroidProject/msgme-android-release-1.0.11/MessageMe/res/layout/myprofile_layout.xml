<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/groupedtable_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include layout="@layout/contact_profile_picture_layout" />

        <LinearLayout
            android:id="@+id/contact_pin_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/my_profile_background"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:gravity="center"
                android:text="@string/contact_id_label"
                android:textColor="#5a5c5f"
                android:textSize="16sp"
                android:textStyle="bold"
                android:shadowColor="@color/white"
				android:shadowDx="0"
				android:shadowDy="1"
				android:shadowRadius="1" />

            <TextView
                android:id="@+id/user_pin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#2ca127"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textIsSelectable="true"
                android:shadowColor="@color/white"
				android:shadowDx="0"
				android:shadowDy="1"
				android:shadowRadius="1" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dip"
                android:gravity="center"
                android:text="@string/contact_friends_add"
                android:textColor="#6c6c6c"
                android:textSize="13sp"
                android:shadowColor="@color/white"
				android:shadowDx="0"
				android:shadowDy="1"
				android:shadowRadius="1" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:contentDescription="@null"
            android:src="@drawable/my_profile_separator" />

        <TextView
            android:id="@+id/find_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:background="@drawable/cell_top_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/groupedtable_cell_icon_addcontact"
            android:drawablePadding="16dip"
            android:gravity="center_vertical"
            android:onClick="findFriends"
            android:text="@string/find_friends_lbl"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/myprofile_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dip"
            android:background="@drawable/cell_bottom_selector"
            android:clickable="true"
            android:drawableLeft="@drawable/groupedtable_cell_icon_settings"
            android:drawablePadding="16dip"
            android:gravity="center_vertical"            
            android:text="@string/menu_settings"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</ScrollView>