<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <Button
        android:id="@+id/google_images_selector"
        style="@style/VideoSelectorButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dip"
        android:text="@string/google_images_lbl" />

    <Button
        android:id="@+id/take_photo_selector"
        style="@style/VideoSelectorButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dip"
        android:text="@string/take_photo_lbl" />

    <Button
        android:id="@+id/choose_existing_selector"
        style="@style/VideoSelectorButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dip"
        android:text="@string/choose_existing_lbl" />

    <Button
        android:id="@+id/doodle_selector"
        style="@style/VideoSelectorButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="15dip"
        android:text="@string/doodle_label" />

</LinearLayout>