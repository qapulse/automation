<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <include
        android:id="@+id/date_divider"
        layout="@layout/date_divider_layout" />

    <include
        android:id="@+id/message_sender"
        layout="@layout/messages_received_sender" />

    <LinearLayout
        android:id="@+id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/message_sender"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/map_message_body"
            android:layout_width="@dimen/map_content_width"
            android:layout_height="@dimen/map_content_height"
            android:contentDescription="@string/msg_bubble_received_location"
            android:scaleType="fitXY"
            android:src="@drawable/messagesview_bubble_thumbtext_overlay_other" />

        <FrameLayout
            android:layout_width="@dimen/map_content_width"
            android:layout_height="wrap_content"
            android:layout_margin="0dip"
            android:background="@drawable/messagesview_bubble_thumbtext_base_other_selector" >

            <include layout="@layout/location_message_info" />
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>