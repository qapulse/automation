<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/location_message_info_width"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/map_message_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/map_message_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/map_message_title"
        android:layout_alignParentRight="true"
        android:textColor="@color/messages_bubble_secondary_text"
        android:textSize="12sp" />

</RelativeLayout>