<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="listViewParent">
        <item name="android:background">@color/list_view_background</item>
    </style>

    <style name="messageMeButton">
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="baseButton" parent="messageMeButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button_base_selector</item>
    </style>

    <style name="baseButton.half">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="primaryButton" parent="messageMeButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_primary_selector</item>
    </style>

    <style name="dangerButton" parent="messageMeButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_danger_selector</item>
    </style>

    <style name="gtableSectionTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:textColor">@color/text_pill_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="gtableSectionDescription">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="insetText">
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="gtableInstructionContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/groupedtable_instruction_background</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="gtableInstructionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="groupTableInputCellLabel">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="groupTableInputCellText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="gtableVersionInfoText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="gtableSettingLabelPrimary">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MessageMe" parent="android:style/Theme.Light">
        <item name="android:windowTitleSize">@dimen/actionbar_compat_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/ActionBarCompat</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>

        <!-- for programmatic instantiation -->
        <item name="actionbarCompatTitleStyle">@style/ActionBarCompatTitle</item>
        <item name="actionbarCompatItemStyle">@style/ActionBarCompatItem</item>
        <item name="actionbarCompatItemHomeStyle">@style/ActionBarCompatHomeItem</item>
        <item name="actionbarCompatProgressIndicatorStyle">@style/ActionBarCompatProgressIndicator</item>
    </style>

    <style name="Theme.Splash" parent="android:style/Theme.Light">
        <item name="android:background">@color/black</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionBarCompat">
        <item name="android:background">@drawable/actionbar_top_base</item>
    </style>

    <style name="ActionBarCompatItemBase">

        <!-- layout_width/height must be set in code -->
        <item name="android:scaleType">center</item>
        <item name="android:background">@drawable/actionbar_compat_item</item>
    </style>

    <style name="ActionBarCompatProgressIndicator" parent="android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminate">false</item>
        <item name="android:indeterminateDrawable">@drawable/actionbar_activitycircle_rotating</item>
    </style>

    <style name="ActionBarCompatTitleBase">
        <item name="android:id">@id/actionbar_compat_title</item>
        <!-- layout_width/height/weight must be set in code -->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="ActionBarCompatTitle" parent="style/ActionBarCompatTitleBase">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBarCompatItem" parent="style/ActionBarCompatItemBase"></style>

    <style name="ActionBarCompatHomeItem" parent="style/ActionBarCompatItemBase"></style>

    <style name="VideoSelectorButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="NotificationText">

        <!-- <item name="android:textColor">?android:attr/textColorPrimary</item> -->
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NotificationTitle">

        <!-- <item name="android:textColor">?android:attr/textColorPrimary</item> -->
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InternalNotificationText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="InternalNotificationTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NormalText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PackagePickerLabel">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ItemPlaceName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ItemPlaceDistance">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ItemPlaceDistance.Unit">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Animations" />

    <style name="Animations.GrowFromBottom">
        <item name="@android:windowEnterAnimation">@anim/grow_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_top</item>
    </style>

    <style name="Animations.GrowFromTop">
        <item name="@android:windowEnterAnimation">@anim/grow_from_top</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottom</item>
    </style>

    <style name="Animations.PopDownMenu">
        <item name="@android:windowEnterAnimation">@anim/grow_from_topleft_to_bottomright</item>
        <item name="@android:windowExitAnimation">@anim/shrink_from_bottomright_to_topleft</item>
    </style>

    <!-- Custom style for alert dialog with centered text -->
    <style name="CenteredAlertDialog" parent="@style/Theme.Dialog.NoBackground">
        <item name="android:gravity">center</item>
    </style>

    <!--
         Custom style for translucent search activity background 
    
         IMPORTANT: All the UI elements affected by this style will inherit
         the black background.  If you do not want a black background those
         elements must set their own background, e.g. android:background="@null"
    -->
    <style name="Theme.Translucent.Dark" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:background">@color/translucent_black</item>
    </style>

    <style name="Theme.Dialog.NoBackground" parent="@android:style/Theme.Dialog">
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.ProgressBar.MediaMessage" parent="@android:style/Widget.ProgressBar.Small.Inverse">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@drawable/progress_small_dark_rotating</item>
        <item name="android:progressDrawable">@drawable/progress_circle</item>
    </style>

</resources>